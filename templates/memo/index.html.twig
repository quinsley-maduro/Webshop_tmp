{% extends 'base.html.twig' %}

{% block title %}MEMO index{% endblock %}

{% block body %}
    <h1>MEMO index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titel</th>
                <th>Content</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for m_e_m_o in m_e_m_os %}
            <tr>
                <td>{{ m_e_m_o.id }}</td>
                <td>{{ m_e_m_o.Titel }}</td>
                <td>{{ m_e_m_o.Content }}</td>
                <td>{{ m_e_m_o.UpdatedAt ? m_e_m_o.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('m_e_m_o_show', {'id': m_e_m_o.id}) }}">show</a>
                    <a href="{{ path('m_e_m_o_edit', {'id': m_e_m_o.id}) }}">edit</a>
